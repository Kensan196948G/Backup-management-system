# GitHub Personal Access Token
# 取得方法: https://github.com/settings/tokens
# 必要な権限: repo, workflow
GITHUB_TOKEN=ghp_YOUR_TOKEN_HERE

# Brave Search API Key (オプション)
# 取得方法: https://brave.com/search/api/
# 無料プラン: 2000リクエスト/月
BRAVE_API_KEY=YOUR_BRAVE_API_KEY_HERE

# Flask設定
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# データベース設定
# オプション1: PostgreSQL (推奨 - Phase 12)
DATABASE_URL=postgresql://backupmgmt:your_password@localhost:5434/backup_management

# オプション2: SQLite (開発環境/バックアップ)
# DATABASE_PATH=/mnt/Linux-ExHDD/backup-management-system/data/backup_mgmt.db

# メール設定（通知機能用）
# SMTP サーバー設定
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false

# 認証情報（セキュリティ注意: 本番環境では環境変数またはシークレット管理ツールを使用）
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-specific-password

# 送信者情報
MAIL_DEFAULT_SENDER=Backup System <backup-system@example.com>

# レート制限設定
MAIL_RATE_LIMIT_MAX=10
MAIL_RATE_LIMIT_WINDOW=3600

# 通知設定
NOTIFICATION_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true

# Microsoft Teams Webhook (オプション)
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/...

# Celery設定 (Phase 11 - 非同期タスク処理)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
FLOWER_BASIC_AUTH=admin:your_flower_password
